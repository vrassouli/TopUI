@using Microsoft.AspNetCore.Components.Forms
<h3>SampleModalContent</h3>

<EditForm Model="_model" OnValidSubmit="OnSubmit">
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" for="result">Result:</label>
        <div class="col-sm-10">
            <InputText type="text" class="form-control" id="result" @bind-Value="_model.Name" />
        </div>
    </div>
    <div class="d-flex gap-3">
        <Button Mode="ButtonMode.Primary" Type="ButtonType.Submit">Set result</Button>
        <Button Mode="ButtonMode.Secondary" data-bs-dismiss="modal" aria-label="Close">Close</Button>
    </div>
</EditForm>

@code{
    [Inject] private IBootstrapJs BootstrapJs { get; set; } = default!;
    private CountryDto _model = new();

    private async Task OnSubmit()
    {
        await BootstrapJs.CloseDialog(_model.Name);
    }
}