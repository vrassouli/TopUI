@typeparam TItem

<div class="cell" style="@(Column.GetCellStyles())" @onclick="OnCellClicked">
    @if (SortDirection == SortDirection.Ascending)
    {
        <i class="bi bi-sort-alpha-down"></i>
    }
    else if (SortDirection == SortDirection.Descending)
    {
        <i class="bi bi-sort-alpha-up"></i>
    }
    <div class="header">@Column.GetHeader()</div>
    @if (Column.AllowFilter && Column.GetFilterExpression() != null && DataGrid.OnFilter.HasDelegate)
    {
        <div class="filter dropdown" @onclick:stopPropagation="true" @onclick="OnFilterClicked">
            <i class="bi @GetFilterIcon()"></i>
        </div>
    }
    @if (Column.AllowResize && Column.Width != null)
    {
        <div class="resizer" id="@GetResizerId()"></div>
    }
</div>
