@typeparam TItem

@if (Item == null)
{
    <div class="cell" style="width: @(Column.GetWidth())px;">...</div>
}
else
{
    <div class="cell @(Column.CellClass?.Invoke(Item))" style="width: @(Column.GetWidth())px;">
        @if (Column.ChildContent != null)
            @Column.ChildContent.Invoke(Item)
        else
            @Column.GetData(Item)
    </div>
}