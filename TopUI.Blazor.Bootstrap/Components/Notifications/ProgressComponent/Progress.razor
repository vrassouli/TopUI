@namespace TopUI.Blazor.Bootstrap.Components
@inherits BootstrapComponent

<div @attributes=AdditionalAttributes role="progressbar" aria-valuenow="@Value" aria-valuemin="0" aria-valuemax="100">
    <div class="progress-bar @GetProgressClasses()" style="width: @(Value)%">
        @if(DisplayLabel)
        {
            <span>@(Value)%</span>
        }
    </div>
</div>