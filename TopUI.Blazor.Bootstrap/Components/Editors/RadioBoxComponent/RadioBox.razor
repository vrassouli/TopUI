@namespace TopUI.Blazor.Bootstrap.Components

@typeparam TValue
@inherits BootstrapFormControlComponent<TValue>

<div @attributes=AdditionalAttributes>
    <input class="form-check-input" type="radio" checked="@(Equals(CurrentValue, SelectionValue))" @onchange="OnChange" id="@(Id)_input" name="@GetGroupName()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="form-check-label" for="@(Id)_input">
            @Label
        </label>
    }
</div>
