@namespace TopUI.Blazor.Bootstrap.Components

@typeparam TValue
@inherits BootstrapFormControlComponent<TValue>

<div @attributes=AdditionalAttributes>
    <input class="form-check-input" type="checkbox" role="switch" checked="@CurrentValue" @onchange="OnChange" id="@(Id)_input">
    <label class="form-check-label" for="@(Id)_input">@(Equals(CurrentValue, true) ? Label : (OffLabel ?? Label))</label>
</div>
